    "@types/jest": "^23.3.9",
    "@types/mocha": "^5.2.5",
    "@types/supertest": "^2.0.6",
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.7",
    "supertest": "^3.3.0",
    "ts-mocha": "^2.0.0"
  },
  "dependencies": {
    "@types/axios": "^0.14.0",
    "@types/compression": "0.0.36",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.4",
    "@types/csurf": "^1.9.35",
    "@types/express": "^4.16.0",
    "@types/glob": "^7.1.1",
    "@types/helmet": "0.0.42",
    "@types/node": "^10.12.11",
    "@types/nodemailer": "^4.6.5",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.1",
    "compression": "^1.7.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "csurf": "^1.9.0",
    "express": "^4.16.4",
    "glob": "^7.1.3",
    "helmet": "^3.15.0",
    "nodemailer": "^5.0.0",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "reflect-metadata": "^0.1.12",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.1"
  },
  "scripts": {
    "init": "npm install && cd client && npm install",
    "dev": "concurrently \"npm run startClient\" \"npm run startServer\"",
    "start": "cross-env NODE_ENV=production node build/index.js",
    "build": "concurrently \"npm run buildServer\" \"npm run buildClient\"",
    "test": "concurrently \"npm run testServer\" \"npm run testClient\"",
    "startServer": "nodemon",
    "buildServer": "tsc",
    "testServer": "cross-env NODE_ENV=test ts-mocha server/test/**/*.ts --timeout 10000",
    "startClient": "cd client && npm run start",
    "buildClient": "cd client && npm run build",
    "testClient": "cd client && npm run test",
    "updateRoutes": "node client/scripts.js updateRoutes",
    "heroku-postbuild": "npm run init && npm run build"
  }
}
